<!DOCTYPE html>
<html>
  <head>    
    <link rel='stylesheet' href='/stylesheets/style.css' />     
</head>
  
  <body>    
    <h3>User Management Page</h3>
    
    
    <table border="1">
        <th>Username</th>
        <% allusers.forEach(function(user) { %>
        <tr>    
          <td>
             <%= user.Username %>
          </td>
            <!-- add a delete link -->
          <td>        
              <a href="/users/delete/<%= user.Username%> ">  Delete  </a>
          </td>

            <!-- add an update link - will redirect to the user data page -->
            <td>
                <a href="/users/update/<%= user.Username%> ">  Update  </a>                
            </td>
          
        </tr>

        <% }) %>
    </table>

    <a href="/users/userDataPage/" target="_self">Add New</a> <br/><br/><br/>

    <input type="button" value="Back" onclick="history.back(-1)" /> 
    <body>

  </body>
</html>
